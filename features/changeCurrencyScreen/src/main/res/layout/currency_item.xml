<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/currency_item"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/margin_16"
	android:layout_marginVertical="@dimen/layout_margin_vertical_4dp">

	<ImageView
		android:id="@+id/selected_icon"
		android:layout_width="@dimen/layout_width_32dp"
		android:layout_height="@dimen/layout_width_32dp"
		android:src="@drawable/selected"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		tools:ignore="ContentDescription"
		tools:visibility="visible"/>

	<TextView
		android:id="@+id/currency_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_8"
		android:layout_marginVertical="@dimen/margin_8"
		android:textSize="@dimen/text_size_18sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toEndOf="@+id/selected_icon"
		tools:text="1 usd = 1 eur"/>
</androidx.constraintlayout.widget.ConstraintLayout>